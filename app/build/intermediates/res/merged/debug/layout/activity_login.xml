<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical">

    <TextView
        
        android:text="帳號"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        >
    </TextView>
     <EditText
        android:id="@+id/account"
        
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        >
         
     </EditText>
    
     <TextView
        
        android:text="密碼"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        >
    </TextView>
     <EditText
        android:id="@+id/passwd"
        
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        >
    </EditText>
    <Button 
       
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:onClick="enterOK" 
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FB"
        android:onClick="LoginwithFB"/>

</LinearLayout><!-- From: file:/Users/joseph/Documents/Android%20studio%20model/AOLO_ver4/AOLO/app/src/main/res/layout/activity_login.xml -->